{% extends 'base.html.twig' %}

{% block title %}
Search
{% endblock %}

{% block content %}

<h2>Search Results</h2>

{% if results|length == 0 %}
<p>No results found.</p>
{% else %}
<table border="1">
{% for result in results %}
<tr>
    <td valign="top"><a href="{{ result.url }}">{{ result.name }}</a></td>
    <td>{{ result.description|raw }}</td>
</tr>
{% endfor %}
</table>
{% endif %}

{% endblock %}