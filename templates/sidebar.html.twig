<table>
    <tr>
        <td bgcolor="#ff1100">
            <font color="#ffffff">Search</font>
        </td>
    </tr>
    <tr>
        <td>
            <form action="/search.php" method="get">
                <input type="text" name="q" value="" /><br/>
                <input type="submit" value="Search" />
            </form>
        </td>
    </tr>
    <tr>
        <td bgcolor="#ff1100">
            <font color="#ffffff">Upcoming Events</font>
        </td>
    </tr>
    <tr>
        <td>
            {% if upcomingEvents is empty %}
            No upcoming events.
            {% else %}
            <ul>
                {% for event in upcomingEvents %}
                <li>
                    <b>{{ event.cal_name }}</b><br/>
                    {% if event.cal_date_start == event.cal_date_end %}
                    {{ event.cal_date_start|date("M j, Y") }}<br/>
                    {% else %}
                    {{ event.cal_date_start|date("M j, Y") }} - {{ event.cal_date_end|date("M j, Y") }}<br/>
                    {% endif %}
                    {{ event.cal_location }}<br/>
                    <a href="{{ event.cal_url }}">{{ event.cal_url }}</a>
                </li>
                {% endfor %}
            </ul>
            {% endif %}
        </td>
    </tr>
    <tr>
        <td bgcolor="#ff1100">
            <font color="#ffffff">Categories</font>
        </td>
    </tr>
    <tr>
        <td>
            {% for category in categories %}
            <b>{{ category.title }}</b>
            <ul>
                {% for subcategory in category.sub %}
                <li><a href="/links.php?category={{ subcategory.cat_sub_id }}">{{ subcategory.cat_sub_title }}</a></li>
                {% endfor %}
            </ul>
            {% endfor %}
        </td>
    </tr>
    <tr>
        <td bgcolor="#ff1100">
            <font color="#ffffff">Magazines</font>
        </td>
    </tr>
    <tr>
        <td>
            <b>Online</b><br/>
            <ul>
                {% for magazine in onlineMagazines %}
                    <li><a href="{{ magazine.online_url }}">{{ magazine.online_name }}</a></li>
                {% endfor %}
            </ul>
            <b>Print</b><br/>
            <ul>
                {% for magazine in printMagazines %}
                    <li><a href="{{ magazine.print_url }}">{{ magazine.print_name }}</a></li>
                {% endfor %}
            </ul>
        </td>
    </tr>
    <tr>
        <td bgcolor="#ff1100">
            <font color="#ffffff">Big Shops &amp; Vendors</font>
        </td>
    </tr>
    <tr>
        <td>
            <ul>
            {% for vendor in vendors %}
                <li><a href="{{ vendor.vendor_url }}">{{ vendor.vendor_name }}</a></li>
            {% endfor %}
            </ul>
        </td>
    </tr>
    <tr>
        <td bgcolor="#ff1100">
            <font color="#ffffff">Service and Repair</font>
        </td>
    </tr>
    <tr>
        <td>
            <ul>
            {% for shop in repairShops %}
                <li><a href="{{ shop.repair_url }}">{{ shop.repair_name }}</a></li>
            {% endfor %}
            </ul>
        </td>
    </tr>
</table>
